@model KWorks.License.Management.Models.AccountV1

@{
    ViewData["Title"] = "Login";
    Layout = "";
    var returnUrl = @Context.Request.Query["returnurl"];
}

<!DOCTYPE html>

<html lang="en">

<head runat="server">
    <title>라이선스관리시스템</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="~/favicon.ico" type="image/ico" />
    <link rel="icon" href="~/favicon.ico" type="image/ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <link href="/assets/plugins/global/plugins.bundle.css" rel="stylesheet" type="text/css" />
    <link href="/assets/css/style.bundle.css" rel="stylesheet" type="text/css" />
</head>

<body id="kt_body" class="bg-body">

    <!--begin::Main-->
    <div class="d-flex flex-column flex-root">
        <div class="d-flex flex-column flex-column-fluid bgi-position-y-bottom position-x-center bgi-no-repeat bgi-size-contain bgi-attachment-fixed">

            <!--begin::Form 전체-->
            <div class="d-flex flex-center flex-column flex-column-fluid p-10 pb-lg-20">
                <div class="w-lg-500px bg-body rounded shadow-sm p-10 p-lg-15" style="padding-top:0 !important; padding-left: 0 !important;padding-right: 0 !important;margin-left: 0 !important; margin-right: 0 !important; margin-top: 0 !important; width: 100%;">

                    <div id="contents_Header" class="w-lg-500px rounded bg-body shadow-sm fa-pull-right" 
                         style="border-bottom-left-radius: 0 !important; border-bottom-right-radius: 0 !important; width: 100%; height: 45px; resize: both; padding-top: 14px; padding-left: 9px; font-weight: 700; font-family: emoji; color: #4c4444; ">
                       License System <span style="color: #a1a0a7;">v1.0</span>
                    </div>
                    <div id="contents_Body">
                        <!-- Header -->
                        <div class="text-center" style="padding: 70px 0 20px 0;">
                            <img alt="Logo" src="/logo/logo.jpg" class="h-70px" style="display:inline;" />
                        </div>
                        <!-- Form -->
                        <form class="form w-100" novalidate="novalidate" asp-action="LogIn" asp-route-returnurl="@returnUrl" style="padding-left: 10px; padding-right: 10px;">
                            <div class="fv-row mb-10">
                                <label class="form-label fs-6 fw-bolder text-gray">아이디</label>
                                <input class="form-control form-control-lg form-control-solid" id="loginId" name="loginId" asp-for="LoginId" required="required" />
                            </div>
                            <div class="fv-row mb-10">
                                <div class="d-flex flex-stack mb-2">
                                    <label class="form-label fw-bolder text-gray fs-6 mb-0">패스워드</label>
                                </div>
                                <input class="form-control form-control-lg form-control-solid" type="password" id="password" name="password" asp-for="Password" required="required" />
                            </div>
                            <div class="text-center">
                                <input type="submit"
                                       value="로그인"
                                       class="btn btn-flex flex-center btn-lg btn-primary w-100 mb-2"
                                       style="background-color: #3bc3ff; color: white; width: 100%; margin-top: 12px; padding-top: 8px !important;
                                              padding-bottom: 8px !important; padding-top: 11px !important;
                                              padding-bottom: 11px !important;
                                              font-size: 17px; font-weight: 900;" />
                            </div>
                            @if (ViewBag.Message != null)
                            {
                                <script type="text/javascript">
                                    window.onload = function () {
                                        alert("@ViewBag.Message");
                                    };
                                </script>
                            }
                        </form>
                    </div>

                </div>
            </div>
            <!--end::Form 전체-->
            <!--begin::Footer-->
            <div class="d-flex flex-center flex-column-auto p-10">
                <div class="d-flex align-items-center fw-bold fs-6">
                    <a href="#" class="text-muted text-hover-primary px-2">Version 1.0</a>
                </div>
            </div>
            <!--end::Footer-->

        </div>
    </div>
    <!--end::Main-->

</body>
</html>
