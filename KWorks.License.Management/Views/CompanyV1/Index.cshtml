<script type="text/javascript">
    $(document).ready(function () {
   
    });

    function Create() {
        var id = $('#hdnCompanyId').val();

        if ($('#txtName').val().trim() == '') {
            alert('회사명을 입력하세요.');
            return false;
        }

        var url = "/CompanyV1/Create";

        var data = {
            Company_Name: $('#txtName').val(),
            Email: $('#txtEmail').val(),
            CEO_Name: $('#txtCEO').val(),
            Company_Tel: $('#txtCEONum').val(),
            Manager_Name: $('#txtManager').val(),
            Manager_Tel: $('#txtManagerNum').val(),
            Address: $('#txtAddress').val(),
            Remark: $('#txtReamrk').val().replaceAll('\n', '<br>')
        };

        if (id != 0) {
            url = "/CompanyV1/Update";

            data = {
                Id: id,
                Company_Name: $('#txtName').val(),
                Email: $('#txtEmail').val(),
                CEO_Name: $('#txtCEO').val(),
                Company_Tel: $('#txtCEONum').val(),
                Manager_Name: $('#txtManager').val(),
                Manager_Tel: $('#txtManagerNum').val(),
                Address: $('#txtAddress').val(),
                Remark: $('#txtReamrk').val().replaceAll('\n', '<br>')
            };
        }

        $.ajax({
            type: "POST",
            url: url,
            data: data,
            async: "true",
            success: function (rdata) {
                location.reload();
            }
        });

    }

    function OpenCreateModal() {
        $('#hdnCompanyId').val(0);

        $('#txtName').val('');
        $('#txtEmail').val('');
        $('#txtCEO').val('');
        $('#txtCEONum').val('');
        $('#txtManager').val('');
        $('#txtManagerNum').val('');
        $('#txtAddress').val('');
        $('#txtReamrk').val('');

        $('#kt_modal_add_user').modal('toggle');
    }

    function OpenUpdateModal(id, name, email, ceo, ceoNum, manager, managerNum, address, remark) {
        $('#hdnCompanyId').val(id);

        $('#txtName').val(name);
        $('#txtEmail').val(email);
        $('#txtCEO').val(ceo);
        $('#txtCEONum').val(ceoNum);
        $('#txtManager').val(manager);
        $('#txtManagerNum').val(managerNum);
        $('#txtAddress').val(address);
        $('#txtReamrk').val(remark.replaceAll("<br>", "\r\n"));

        $('#kt_modal_add_user').modal('toggle');
    }

    function Delete(userId) {
        var rlt = confirm("삭제하시겠습니까?");

        if (rlt) {
            var url = "/CompanyV1/Delete";
            var data = {
                Id: userId
            };

            $.ajax({
                type: "GET",
                url: url,
                data: data,
                async: "true",
                success: function (rdata) {
                    location.reload();
                }
            });
        }
    }
</script>


